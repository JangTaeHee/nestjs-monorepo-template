{
  "name": "nestjs-monorepo-template",
  "version": "0.0.1",
  "description": "",
  "author": "jangta8@gmail.com",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\"",
    "start:dev": "runapp() { [ -n \"$1\" ] && NODE_APP=$1 || NODE_APP=main-app; nest start --debug --watch $NODE_APP; }; runapp",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/main-app/main",
    "start:local": "NODE_ENV=local; runapp() { [ -n \"$1\" ] && NODE_APP=$1 || NODE_APP=main-app; node dist/apps/$NODE_APP/main; }; runapp",
    "lint": "eslint \"{src,apps,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/main-app/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/mongoose": "^10.0.4",
    "@nestjs/platform-express": "^9.0.0",
    "@types/joi": "^17.2.3",
    "@types/mongoose": "^5.11.97",
    "@types/pino-http": "^5.8.4",
    "@types/ramda": "^0.29.11",
    "cross-env": "^7.0.3",
    "joi": "^17.12.2",
    "mongoose": "^8.2.1",
    "nestjs-pino": "^4.0.0",
    "pino-http": "^9.0.0",
    "ramda": "^0.29.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "29.5.1",
    "@types/node": "18.16.12",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.5.0",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.1.0",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@lib/config(|/.*)$": "<rootDir>/libs/config/src/$1",
      "^@lib/database(.*)$": "<rootDir>/libs/database/src/$1",
      "^@lib/log/(.*)$": "<rootDir>/libs/log/src/$1"
    }
  }
}
